<html>
    <head>
        <title>Docker Dashboard</title>
        <link href="/css/bootstrap.min.css" rel="stylesheet" media="screen">
    </head>
    <body>
        <h1>Docker Hosts</h1>
        <div class="hosts">
        {% for host in hosts %}
        <div class="host_div" id="{{ host }}">
        <h2>{{host}}</h2>
            {% for container in containers[host] %}
            {% set cont_name = container['Names'][0][1:]%}
            <h3>{{cont_name}}</h3>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Status</th><th>Command</th><th>Controls</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th><span id="status-{{host}}-{{cont_name}}">{{container['Status']}}</span></th>
                    <th>{{container['Image']}}</th>
                    <th>
                    <button type="button" class="btn btn-success disabled control" id="start-{{host}}-{{cont_name}}">Start</button>
                    <button type="button" class="btn btn-danger disabled control" id="stop-{{host}}-{{cont_name}}">Stop</button>
                    </th>
                </tr>
                </tbody>
            </table>
            {% endfor %}
        </div>
        {% endfor %}
        </div>
        <script type="text/javascript" src="/js/jquery.min.js"></script>
        <script type="text/javascript" src="/js/docker.js"></script>
        <script type="text/javascript" src="/js/newdashboard.js"></script>
        <script type="text/javascript" src="/js/bootstrap.js"></script>
    </body>
<html>
